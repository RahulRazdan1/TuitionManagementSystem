@page
@model ForgotPasswordModel
@{
    ViewData[AppConstants.TitleKey] = "Forgot your password?";
}
<div class="container h-p100">
    <div class="row align-items-center justify-content-md-center h-p100">

        <div class="col-12">
            <div class="row justify-content-center g-0">
                <div class="col-lg-5 col-md-5 col-12">
                    <div class="bg-white rounded10 shadow-lg">

                        <div class="content-top-agile p-20 pb-0">
                            <a href="/"> <img id="logo-default" src="/tmsImages/logo.png"></a><br><br>
                        </div>
                        <div class="p-40">
                            <div class="row">
                                <div class="col-md-12">
                                    <form method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <div class="input-group mb-3">
                                                <span class="input-group-text bg-transparent"><i class="ti-user"></i></span>
                                                <input asp-for="Input.Email" class="form-control ps-15 bg-transparent" autocomplete="username" aria-required="true" placeholder="Email" />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                            <div class="col-12 text-center">
                                                <button type="submit" class="btn btn-danger mt-10">Reset Password</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            @if (Model.ShowResetpasswordLink)
                            {
                                @*<div class="row">
                                    <div class="col-md-12">
                                        For testing purpose we are showing reset password link here.
                                        <a href="@Model.Link">Reset Password</a>
                                    </div>
                                </div>*@
                            }
                            @if (Model.ShowInValidEmailError)
                            {
                                <div class="row" style="text-align:center;">
                                    <div class="col-md-12">
                                        <br>
                                        Email does not existsing! Please provide a valid Email.
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="text-center">
                        <p class="mt-20 text-white">© 2022 - 23  Eagle Tutoring - by Rahul Razdan</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
