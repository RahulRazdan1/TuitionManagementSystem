@page
@using Web.Common
@model LogoutModel
@{
    ViewData[AppConstants.TitleKey] = "Log out";
}
<div class="container h-p100">
    <div class="row align-items-center justify-content-md-center h-p100">

        <div class="col-12">
            <div class="row justify-content-center g-0">
                <div class="col-lg-5 col-md-5 col-12">
                    <div class="bg-white rounded10 shadow-lg">

                        <div class="content-top-agile p-20 pb-0">
                            <a href="/"> <img id="logo-default" src="/tmsImages/logo.png"></a><br><br>
                        </div>
                        <div class="p-40">
                            @if (Model.UserContext.IsAuthenticatedUser)
                            {
                                <form class="form-inline" asp-area="Identity" asp-page="/Logout" method="post">
                                    <button type="submit" class="nav-link btn btn-link text-dark">Click here to Logout</button>
                                </form>
                            }
                            else
                            {
                                <div class="row">
                                    <div class="col-md-12">
                                        <p>You have successfully logged out of the application. 
                                          <a asp-area="Identity" asp-page="/Login">Click here to Login.</a></p>
                                    </div>
    
                                </div>

                            }
                        </div>
                    </div>
                    <div class="text-center">
                        <p class="mt-20 text-white">© 2022 - 23  Eagle Tutoring - by Rahul Razdan</p>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>




