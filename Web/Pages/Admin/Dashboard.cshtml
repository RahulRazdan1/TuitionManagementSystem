@page
@model Web.Pages.Admin.DashboardModel
@{
}
<style>
    input {
        border: none !important;
    }
</style>
<section class="content">
    <div class="row">
        <div class="col-xl-6 col-lg-6 col-12">
            <div class="box">
                <div class="box-body">
                    <div class="d-flex justify-content-between">
                        <h2 class="my-0 fw-600 text-primary">
                            <input type="text" asp-for="Input.TuteeCount" class="my-0 fw-600 text-primary" aria-required="true" readonly="readonly" />
                        </h2>
                        <div class="w-40 h-40 bg-primary rounded-circle text-center fs-24 l-h-40"><i class="fa fa-users"></i></div>
                    </div>
                    <p class="fs-18 mt-10">Total Tutees</p>
                </div>
            </div>
        </div>
        <div class="col-xl-6 col-lg-6 col-12">
            <div class="box">
                <div class="box-body">
                    <div class="d-flex justify-content-between">
                        <h2 class="my-0 fw-600 text-warning">
                            <input type="text" asp-for="Input.TutorCount" class="my-0 fw-600 text-warning" aria-required="true" readonly="readonly"/>
                        </h2>
                        <div class="w-40 h-40 bg-warning rounded-circle text-center fs-24 l-h-40"><i class="fa fa-user"></i></div>
                    </div>
                    <p class="fs-18 mt-10">Total tutors</p>
                </div>
            </div>
        </div>
        <div class="col-xl-6 col-lg-6 col-12">
            <div class="box">
                <div class="box-body">
                    <div class="d-flex justify-content-between">
                        <h2 class="my-0 fw-600 text-info">
                            <input type="text" asp-for="Input.AcceptedSlotCount" class="my-0 fw-600 text-info" aria-required="true" readonly="readonly"/>
                        </h2>
                        <div class="w-40 h-40 bg-info rounded-circle text-center fs-24 l-h-40"><i class="fa fa-line-chart"></i></div>
                    </div>
                    <p class="fs-18 mt-10">Accepted Request</p>
                </div>
            </div>
        </div>
        <div class="col-xl-6 col-lg-6 col-12">
            <div class="box">
                <div class="box-body">
                    <div class="d-flex justify-content-between">
                        <h2 class="my-0 fw-600 text-danger">
                            <input type="text" asp-for="Input.OpenSlotCount" class="my-0 fw-600 text-danger" aria-required="true" readonly="readonly"/>
                        </h2>
                        <div class="w-40 h-40 bg-danger rounded-circle text-center fs-24 l-h-40"><i class="fa fa-drivers-license-o"></i></div>
                    </div>
                    <p class="fs-18 mt-10">Pending Request</p>
                </div>
            </div>
        </div>
    </div>
</section> 