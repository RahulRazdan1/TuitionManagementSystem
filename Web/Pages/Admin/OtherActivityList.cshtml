@page
@model Web.Pages.Admin.OtherActivityListModel
@{
}
<div class="content-header">
    <div class="d-flex align-items-center">
        <div class="me-auto">
            <h4 class="page-title">Other Activity</h4>
            <div class="d-inline-block align-items-center">
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#"><i class="mdi mdi-home-outline"></i></a></li>
                        <li class="breadcrumb-item" aria-current="page">Other Activity</li>
                        <li class="breadcrumb-item active" aria-current="page">List</li>
                    </ol>
                </nav>
            </div>
        </div>

    </div>
</div>
<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box-header with-border">
                <h4 class="box-title">Other Activity List</h4>
            </div>
            <div class="box">
                <div class="box-body">
                    <div class="row">
                        <div class="col-12">
                            <div class="bb-1 clearFix">
                                <div class="text-end pb-15">
                                    <a class="btn btn-success" asp-page="/Admin/OtherActivityAdd"> <span><i class="fa fa-print"></i> Add </span> </a>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="content-body">
                        <section id="basic-form-layouts">
                            <table class="table table-striped table-bordered hover" id="gridCourse">
                                <thead>
                                    <tr>
                                        <th>User</th>
                                        <th>Subject</th>
                                        <th>Hours</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var form in Model.Input)
                                    {
                                        <tr>
                                            <td>@form.Users</td>
                                            <td>@form.Subject</td>
                                            <td>@form.Hours</td>
                                            <td>@form.IsActive</td>
                                            <td>
                                                <a asp-page="/Admin/OtherActivityDel" asp-route-id="@form.Id">Delete</a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts{
    <link rel="stylesheet" type="text/css" href="~/css/jquery.dataTables.min.css" />
    <script type="text/javascript" src="~/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#gridCourse').DataTable();
        });
    </script>
}