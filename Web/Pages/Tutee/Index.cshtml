@page
@model Web.Pages.Tutee.IndexModel
@{
}
<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box-header with-border">
                <h4 class="box-title">Tutee Slot Detail</h4>
            </div>
            <div class="box">
                <div class="box-body">
                    <div class="row">
                        <div class="col-12">
                            <div class="bb-1 clearFix">
                                <div class="text-end pb-15">
                                    <a class="btn btn-success" asp-page="/Tutee/Add"> <span><i class="fa fa-print"></i> Book a slot </span> </a>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="content-body">
                        <section id="basic-form-layouts">
                            <table class="table table-striped table-bordered hover" id="gridSlotRequest">
                                <thead>
                                    <tr>
                                        <th>Tutee</th>
                                        <th>Subject</th>
                                        <th>Course</th>
                                        <th>Topic</th>
                                        <th>Date</th>
                                        <th>Slot Time1</th>
                                        <th>Slot Time2</th>
                                        <th>Slot Time3</th>
                                        <th>Tutor</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var form in Model.Input)
                                    {
                                        <tr>
                                            <td>@form.Tutee.Name</td>
                                            <td>@form.Subject.Name</td>
                                            <td>@form.Course.Name</td>
                                            <td>@form.Topic</td>
                                            <td>@form.Date</td>
                                            @if (!string.IsNullOrEmpty(@form.AcceptedSlotTime) && @form.AcceptedSlotTime == @form.SlotTime1)
                                            {
                                                <td class="acceptedSlot">@form.SlotTime1</td>
                                            }
                                            else
                                            {
                                                <td>@form.SlotTime1</td>
                                            }
                                            @if (!string.IsNullOrEmpty(@form.AcceptedSlotTime) && @form.AcceptedSlotTime == @form.SlotTime2)
                                            {
                                                <td class="acceptedSlot">@form.SlotTime2</td>
                                            }
                                            else
                                            {
                                                <td>@form.SlotTime2</td>
                                            }
                                            @if (!string.IsNullOrEmpty(@form.AcceptedSlotTime) && @form.AcceptedSlotTime == @form.SlotTime3)
                                            {
                                                <td class="acceptedSlot">@form.SlotTime3</td>
                                            }
                                            else
                                            {
                                                <td>@form.SlotTime3</td>
                                            }
                                            <td>@form.Tutor.Name</td>
                                            <td>
                                                <a asp-page="/Tutee/Delete" asp-route-id="@form.Id" class="btn btn-danger1">Cancel</a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts{
    <link rel="stylesheet" type="text/css" href="~/css/jquery.dataTables.min.css" />
    <script type="text/javascript" src="~/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#gridSlotRequest').DataTable();
        });
    </script>    
}