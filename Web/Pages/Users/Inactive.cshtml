@page
@model Web.Pages.Users.InactiveModel
@{
    ViewData[AppConstants.TitleKey] = "Users";
}

<div class="box">
    <div class="box-header with-border row">
        <div class="col-md-6"> <h4 class="box-title">Inactive Users</h4></div>
        <div class="col-md-6">
            <div class="bb-1 clearFix">
                <div class="text-end pb-15">
                    <button class="btn btn-success" type="button"> <span><i class="fa fa-print"></i> Add </span> </button>
                    <button id="print2" class="btn btn-warning" type="button"> <span><i class="fa fa-print"></i> Print</span> </button>
                </div>
            </div>
        </div>

    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-12">
            </div>
        </div>
        <div class="row">
            <div class="col-12 table-responsive">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Roles</th>
                        </tr>
                        @for (var index = 0; index < Model.Input.Count; index++)
                        {
                            <tr>
                                <td>@Model.Input[index].Name</td>
                                <td>@Model.Input[index].Email</td>
                                <td>@(string.Join(',',Model.Input[index].Roles))</td>
                                <td>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
            <!-- /.col -->
        </div>

    </div>
</div>