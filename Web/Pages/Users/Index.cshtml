@page
@using Web.Common
@model Web.Pages.Users.IndexModel
@{
    ViewData[AppConstants.TitleKey] = "Users";
}
<!-- Example single danger button -->
<section class="content">
    <div class="row">
        <div class="col-lg-12">
             <div class="box-header with-border">
                    <h4 class="box-title">User List</h4>
                </div>
            <div class="box">
                <div class="box-body">
                    <div class="row">
                        <div class="col-12">
                            <div class="bb-1 clearFix">
                                <div class="text-end pb-15">
                                </div>
                            </div>
                        </div>
                    </div>
                   
                    <div class="content-body">
                        <section id="basic-form-layouts">
                             <table class="table table-striped table-bordered hover" id="gridCourse">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Roles</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (var index = 0; index < Model.Input.Count; index++)
                                    {
                                        <tr>
                                            <td>@Model.Input[index].Name</td>
                                            <td>@Model.Input[index].Email</td>
                                            <td>@(string.Join(',',Model.Input[index].Roles))</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
@section Scripts{
    <link rel="stylesheet" type="text/css" href="~/css/jquery.dataTables.min.css"/>
    <script type="text/javascript" src="~/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#gridCourse').DataTable();
        });
    </script>
}